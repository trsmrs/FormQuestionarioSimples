<!DOCTYPE html>
<html lang="pt-br">

<head>
    <%- include('./partials/head.ejs') %>
</head>

<body>

    <%- include('./partials/navbar.ejs') %>

        <div class="container">
            <hr>
            <h1><%= pergunta.titulo %></h1>
            <span><%= pergunta.descricao %></span>
                <hr>
                <form method="POST" action="/responder">
                    <h3>Resposta</h3>
                    <label>Responder esta pergunta:</label>
                    <textarea placeholder="Digite sua resposta" class="form-control" name="corpo"></textarea>
                    <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
                    <button type="submit" class="btn btn-primary">Responder</button>
                </form>
                <hr>
                <h3>Respostas</h3>
                <hr>
                <label>Respostas da sua pergunta:</label>
                <% respostas.forEach(resposta =>{%>
                    <br>
                    <div class="card">
                        <div class="card-body">
                            <span><%= resposta.corpo %></span> <br>
                        </div>
                    </div>

               <%})%>
        </div>





</body>
<%- include('./partials/foot.ejs') %>

</html>